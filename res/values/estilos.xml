<?xml version="1.0" encoding="utf-8"?>
<resources>
<style name="Fondo" parent="@android:style/TextAppearance.Medium">
    <item name="android:background">#ffffff</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:typeface">monospace</item>
    <item name="android:orientation">vertical</item>
</style>

<style name="Titulo" parent="@android:style/TextAppearance.Large">
   <item name="android:layout_width">fill_parent</item>
   <item name="android:layout_height">169dp</item>
   <item name="android:layout_alignParentLeft">true</item>
   <item name="android:layout_alignParentTop">true</item>     
   <item name="android:gravity">center</item>    
   <item name="android:padding">15dp</item>    
   <item name="android:textColor">#003399</item>   
   <item name="android:textSize">25dp</item>     
   <item name="android:textStyle">bold</item> 
   <item name="android:width">150sp</item>
</style>

<style name="SubTitulos" parent="@android:style/TextAppearance.Medium">
   <item name="android:layout_width">wrap_content</item>
   <item name="android:layout_height">wrap_content</item>
   <item name="android:gravity">center_vertical</item>    
   <item name="android:textColor">#000000</item>   
   <item name="android:textSize">15dp</item>
   <item name="android:textStyle">bold</item>      
   <item name="android:width">150sp</item>
</style>

    
    <style name="Encabezado" parent="@android:style/TextAppearance.Medium" >
    <item name="android:background">@drawable/qd_encabezado</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:typeface">monospace</item>
    <item name="android:orientation">vertical</item>
    </style> 
</resources>